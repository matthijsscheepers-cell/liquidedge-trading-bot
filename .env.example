# Broker Configuration
BROKER=capital.com

# Capital.com API Credentials
# REQUIRED: Replace with your actual credentials from Capital.com
CAPITAL_API_KEY=your_api_key_here
CAPITAL_IDENTIFIER=your_email@example.com
CAPITAL_PASSWORD=your_password_here
CAPITAL_ENVIRONMENT=demo  # Options: 'demo' (for testing) or 'live' (real money)

# Trading Configuration
DEFAULT_CURRENCY=EUR_USD
DEFAULT_UNITS=1000
RISK_PER_TRADE=0.02  # 2% risk per trade

# Risk Management
# Maximum portfolio percentage in a single position
MAX_POSITION_SIZE_PCT=0.25  # 25% max per position

# Emergency stop if drawdown exceeds this percentage
EMERGENCY_STOP_DD_PCT=0.15  # Stop at 15% drawdown

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Database Configuration
DB_PATH=data/trading.db

# Backtesting Configuration
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_CAPITAL=10000

# Notification Configuration (optional)
ENABLE_NOTIFICATIONS=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ==============================================================================
# IMPORTANT NOTES:
#
# Demo vs Live Environment:
#   - demo: Use Capital.com demo account (paper trading, no real money)
#   - live: Use Capital.com live account (REAL MONEY AT RISK!)
#
# Always test with demo environment first before going live!
